enum AddressType {
  CUSTOMER
  STAFF
  SHIPPING
  BILLNG
}

enum DiscountCodeType {
  GIFT_CARD
  PROMO_CODE
  REFUND
  GIVEAWAY
}

enum Gender {
  MALE
  FEMALE
}

enum OrderStatus {
  RECIEVED
  PROCESSING
  ACCEPTED
  IN_TRANSIT
  DELIVERED
}

enum Role {
  CUSTOMER
  STAFF
}

type Address {
  id: ID! @id
  firstName: String
  lastName: String
  address: String!
  type: AddressType!
  country: String!
  phoneNumber: String
  state: String!
  city: String!
  zipcode: String!
  owner: User! @relation(link: INLINE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Cart {
  id: ID! @id
  owner: User! @relation(link: INLINE)
  items: [CartItem!]!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type CartItem {
  id: ID! @id
  cart: Cart! @relation(link: INLINE)
  product: Product! @relation(link: INLINE)
  quantity: Int!
  total: Float!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Category {
  id: ID! @id
  name: String!
  image: Image
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type DiscountCode {
  id: ID! @id
  amount: Float
  percentage: Float
  code: String! @unique
  type: DiscountCodeType!
  active: Boolean! @default(value: true)
  expiresAt: DateTime!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Image {
  id: ID! @id
  url: String!
  createdAt: DateTime! @createdAt
}

type Order {
  id: ID! @id
  owner: User! @relation(link: INLINE)
  items: [OrderItem!]!
  status: OrderStatus!
  cancelled: Boolean! @default(value: false)
  shippingFee: Float!
  subtotal: Float!
  total: Float!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type OrderItem {
  id: ID! @id
  order: Order @relation(link: INLINE)
  product: Product @relation(link: INLINE)
  price: Float!
  quantity: Int!
  total: Float!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Product {
  id: ID! @id
  name: String!
  sku: String!
  price: Float!
  discountedPrice: Float
  brand: Brand! @relation(link: INLINE)
  gender: Gender
  category: Category! @relation(link: INLINE)
  sizes: [Size!]!
  images: [Image!]!
  description: String!
  reviews: [Review!]!
  shippingFee: Float @default(value: 0)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Review {
  id: ID! @id
  owner: User! @relation(link: INLINE)
  product: Product! @relation(link: INLINE)
  comment: String!
  rating: Int
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type SavedItem {
  id: ID! @id
  owner: User! @relation(link: INLINE)
  product: Product! @relation(link: INLINE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Size {
  id: ID! @id
  size: String!
  createdAt: DateTime! @createdAt
}

type Brand {
  id: ID! @id
  name: String!
  createdAt: DateTime! @createdAt
}

type User {
  id: ID! @id
  firstName: String!
  lastName: String!
  email: String! @unique
  activated: Boolean! @default(value: false)
  country: String
  disabled: Boolean! @default(value: false)
  twoFactorEnabled: Boolean! @default(value: false)
  pushNotificationEnabled: Boolean! @default(value: true)
  role: Role! @default(value: CUSTOMER)
  sn: String! @unique
  password: String!
  cart: Cart!
  orders: [Order!]!
  savedItems: [SavedItem!]!
  addresses: [Address!]!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}